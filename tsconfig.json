{
  "compilerOptions": {
    "allowJs": false,
    "allowUnreachableCode": false,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2015", "dom"],
    "outDir": "build/",
    "noEmitHelpers": false,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "noLib": false,
    "removeComments": false,
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "inlineSourceMap": false
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },
  "include": ["src/**/*.ts", "test/**/*.ts", "types/**/*.d.ts"],
  "exclude": ["test/backwards-breaking-test.ts"]
}
